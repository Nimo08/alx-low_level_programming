CC=gcc
SRC=main.c school.c
OBJ=$(SRC:.c=.o)
NAME=school
HEADER=m.h
CFLAGS= -Wall -Werror -Wextra -pedantic
.PHONY: all clean oclean fclean re
all:$(NAME)
$(NAME): $(wildcard *.o) $(HEADER)
	@if [ ! -e "$(HEADER)" ]; then
		echo "$(HEADER) is missing.";
		exit 1;
	fi
	$(CC) -Wall -Werror -Wextra -pedantic $(wildcard *.o) -o $(NAME)
clean:
	$(RM) *~ $(NAME)
oclean: 
	$(RM) $(wildcard *.o)
fclean: clean oclean
re: oclean all
